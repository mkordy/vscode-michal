{
	"name": "vscode-michal",
	"displayName": "Michal vscode setup",
	"description": "Emacs selection and other setup.",
	"icon": "emacs_pacifica.png",
	"version": "0.9.0",
	"publisher": "michal",
	"homepage": "https://github.com/mkordy/vscode-michal",
	"repository": {
		"type": "git",
		"url": "https://github.com/mkordy/vscode-michal"
	},
	"bugs": "https://github.com/mkordy/vscode-michal/issues",
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other",
		"Keymaps"
	],
	"keywords": [
		"michal",
		"shortcuts",
		"keybindings",
		"behavior",
		"selection"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/src/extension",
	"contributes": {
		"keybindings": [
			{
				"key": "right",
				"command": "michal.cursorRight",
				"when": "editorTextFocus"
			},
			{
				"key": "right",
				"command": "michal.cursorRight",
				"when": "terminalFocus"
			},
			{
				"key": "left",
				"command": "michal.cursorLeft",
				"when": "editorTextFocus"
			},
			{
				"key": "left",
				"command": "michal.cursorLeft",
				"when": "terminalFocus"
			},
			{
				"key": "down",
				"command": "michal.cursorDown",
				"when": "terminalFocus"
			},
			{
				"key": "down",
				"command": "michal.cursorDown",
				"when": "editorTextFocus"
			},
			{
				"key": "up",
				"command": "michal.cursorUp",
				"when": "terminalFocus"
			},
			{
				"key": "up",
				"command": "michal.cursorUp",
				"when": "editorTextFocus"
			},
			{
				"key": "home",
				"command": "michal.cursorHome",
				"when": "editorTextFocus"
			},
			{
				"key": "home",
				"command": "michal.cursorHome",
				"when": "terminalFocus"
			},
			{
				"key": "end",
				"command": "michal.cursorEnd",
				"when": "editorTextFocus"
			},
			{
				"key": "end",
				"command": "michal.cursorEnd",
				"when": "terminalFocus"
			},
			{
				"key": "ctrl+shift+alt+q ctrl+right",
				"command": "michal.cursorWordRight"
			},
			{
				"key": "ctrl+right",
				"command": "michal.cursorWordPartRight"
			},
			{
				"key": "ctrl+shift+alt+q ctrl+left",
				"command": "michal.cursorWordLeft"
			},
			{
				"key": "ctrl+left",
				"command": "michal.cursorWordPartLeft"
			},
			{
				"key": "alt+o",
				"command": "michal.cursorBottom",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+u",
				"command": "michal.cursorTop",
				"when": "editorTextFocus"
			},
			{
				"key": "alt+g",
				"command": "workbench.action.gotoLine"
			},
			{
				"key": "ctrl+y",
				"command": "editor.action.startFindReplaceAction",
				"when": "editorFocus"
			},
			{
				"command": "editor.action.replaceOne",
				"key": "ctrl+enter",
				"when": "editorFocus && findWidgetVisible"
			},
			{
				"key": "ctrl+f",
				"command": "actions.find",
				"when": "textInputFocus && findWidgetVisible"
			},
			{
				"key": "pagedown",
				"command": "editor.action.nextMatchFindAction",
				"when": "findWidgetVisible"
			},
			{
				"key": "ctrl+f",
				"command": "actions.find",
				"when": "!findWidgetVisible"
			},
			{
				"key": "ctrl+f",
				"command": "actions.find",
				"when": "textInputFocus && findWidgetVisible"
			},
			{
				"key": "pageup",
				"command": "editor.action.previousMatchFindAction",
				"when": "findWidgetVisible"
			},
			{
				"key": "ctrl+g",
				"command": "michal.C-g",
				"when": "editorTextFocus"
			},
			{
				"key": "ctrl+g",
				"command": "closeFindWidget",
				"when": "editorFocus && findWidgetVisible"
			},

			{
				"key": "ctrl+g",
				"command": "michal.exitMarkMode",
				"when": "editorTextFocus"
			},
			{
				"key": "ctrl+g",
				"command": "closeReferenceSearchEditor",
				"when": "inReferenceSearchEditor && !config.editor.stablePeek"
			},
			{
				"key": "ctrl+g",
				"command": "closeReferenceSearch",
				"when": "referenceSearchVisible && !config.editor.stablePeek"
			},
			{
				"key": "ctrl+g",
				"command": "closeBreakpointWidget",
				"when": "breakpointWidgetVisible && editorFocus"
			},
			{
				"key": "ctrl+g",
				"command": "leaveSnippet",
				"when": "editorTextFocus && inSnippetMode"
			},
			{
				"key": "ctrl+g",
				"command": "closeMarkersNavigation",
				"when": "editorFocus && markersNavigationVisible"
			},
			{
				"key": "ctrl+g",
				"command": "closeParameterHints",
				"when": "editorTextFocus && parameterHintsVisible"
			},
			{
				"key": "ctrl+g",
				"command": "hideSuggestWidget",
				"when": "editorTextFocus && suggestWidgetVisible"
			},
			{
				"key": "ctrl+g",
				"command": "cancelRenameInput",
				"when": "editorFocus && renameInputVisible"
			},
			{
				"key": "ctrl+g",
				"command": "closeAccessibilityHelp",
				"when": "accessibilityHelpWidgetVisible && editorFocus"
			},
			{
				"key": "ctrl+g",
				"command": "closeReplaceInFilesWidget",
				"when": "replaceInputBoxFocus && searchViewletVisible"
			},
			{
				"key": "ctrl+g",
				"command": "workbench.action.closeMessages",
				"when": "globalMessageVisible"
			},
			{
				"key": "ctrl+g",
				"command": "workbench.action.closeQuickOpen",
				"when": "inQuickOpen"
			},
			{
				"key": "ctrl+space",
				"command": "michal.enterMarkMode",
				"when": "editorTextFocus"
			},
			{
				"key": "ctrl+enter",
				"command": "michal.jupyterExecLineOrRegionAndMaybeStep",
				"when": "editorTextFocus && !findWidgetVisible && isWorkspaceTrusted &&  !findInputFocussed && !isCompositeNotebook && !notebookEditorFocused && !replaceInputFocussed && editorLangId == 'python'"
			},
			{
				"key": "ctrl+s ctrl+shift+alt+w",
				"command": "michal.jupyterExecCodeAboveInteractive",
				"when": "editorTextFocus && !findWidgetVisible && isWorkspaceTrusted &&  !findInputFocussed && !isCompositeNotebook && !notebookEditorFocused && !replaceInputFocussed && editorLangId == 'python'"
			},
			{
				"key": "ctrl+alt+;",
				"command": "michal.toggleFold",
				"when": "editorTextFocus"
			}
		],
		"commands": [
			{
				"command": "michal.test",
				"title": "michal.test"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"lint": "tslint -p tslint.json --type-check **/*.ts"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.41",
		"@types/node": "^6.0.81",
		"mocha": "^6.1.4",
		"typescript": "^2.4.1",
		"vscode": "^1.1.34"
	},
	"dependencies": {
		"@types/vscode": "^1.30.0"
	},
	"__metadata": {
		"installedTimestamp": 1751409197640,
		"targetPlatform": "undefined",
		"size": 356050
	}
}
